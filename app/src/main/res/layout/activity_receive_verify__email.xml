<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".receive_verify_Email">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/emailverifytext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/emailVerify_text"
                android:layout_width="136dp"
                android:layout_height="142dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:rotation="90"
                android:text="\nVerified"
                android:textColor="#1e3d59"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email_cont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_text"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="It's ready to get back\n on Track"
                android:textColor="#1e3d59"
                android:gravity="center"
                android:textSize="18sp" />

        </LinearLayout>
        <ImageView
            android:id="@+id/logo_login"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/logoo" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
                <TextView
                    android:id="@+id/textverify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email sent!\n Verified your Email address. "
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#1e3d59"
                    android:textStyle="bold"
                    />
                <Button
                    android:id="@+id/gotologin"
                    android:layout_below="@id/textverify"
                    android:onClick="gotoLogin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:text="Go To Login Page"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_design"
                    android:elevation="20dp"

                    />

            </RelativeLayout>

        </LinearLayout>
</RelativeLayout>
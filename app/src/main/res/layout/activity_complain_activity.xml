<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Complain_activity">


    <TextView
        android:id="@+id/complain1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/txtfields"
        android:elevation="5dp"
        android:text="The Worker didn't work correctly"
        android:gravity="center_horizontal"
        android:padding="13dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="15dp"
        android:textColor="@color/cadetBlue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/complain2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="216dp"
        android:background="@drawable/txtfields"
        android:text="The Worker didn't take care of his hygienes"
        android:elevation="5dp"
        android:gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="13dp"
        android:paddingLeft="15dp"
        android:textColor="@color/cadetBlue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/complain3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="288dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/txtfields"
        android:text="The Worker was unprofessional"
        android:elevation="5dp"
        android:gravity="center_horizontal"
        android:padding="13dp"
        android:paddingLeft="15dp"
        android:textColor="@color/cadetBlue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/complain4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="360dp"
        android:background="@drawable/txtfields"
        android:elevation="5dp"
        android:gravity="center_horizontal"
        android:padding="13dp"
        android:paddingLeft="15dp"
        android:text="Other"
        android:textColor="@color/cadetBlue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/otherdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/txtfields"
        android:elevation="5dp"
        android:gravity="center_horizontal"
        android:hint="Enter Detail"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/complain4"
        android:maxLength="50"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:maxLines="3"
        android:padding="13dp"
        android:paddingLeft="15dp"
        android:textColor="@color/cadetBlue"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintHorizontal_bias="1.0"
        />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_horizontal"
        android:onClick="SendComplain"
        android:src="@drawable/button_design"
        app:layout_constraintBottom_toBottomOf="@id/otherdetail"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>